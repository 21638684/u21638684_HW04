@using HWASS4.Models
@model List<Involvement>
@{
    ViewBag.Title = "GetInvolved";
}

<h1 class="text-primary text-center">Get Involved</h1>


    <p class="text-primary">Together we can make a differrence as long as poverty,injustice persists, none of us can rest.</p>

@* A card to display the class details*@
<div class="container">
    <div class="row">
        @foreach (var involvement in Model)
        {
            
            <div class="col-lg-3 mt-4">
                <div class="card h-100 " style="width:400px;">
                    <img class="card-img-top"src="@involvement.Image" alt="Card-image">
                    <div class="card-body text-left">
                        <h4 class="card-text">@involvement.Header</h4>
                        <p class="card-text">@involvement.Description</p>
                        <a href="@involvement.MoreInfo" class="btn btn-primary"><i class="fas fa-link"></i>More Details</a>
                    </div>
                </div>
           </div>
           
        }
    </div>
</div>

<style>
    body{
        padding:2rem;
    }
  

</style>
